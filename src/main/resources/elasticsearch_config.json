{
  "settings": {
    "number_of_shards": 3,
    "analysis": {
      "tokenizer": {
        "ngram_tokenizer": {
          "type": "edge_ngram",
          "min_gram": 3,
          "max_gram": 10,
          "token_chars": [
            "letter",
            "digit"
          ]
        }
      },
      "analyzer": {
        "ngram_tokenizer_analyzer": {
          "type": "custom",
          "tokenizer": "ngram_tokenizer",
          "filter": [
            "lowercase"
          ]
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "details.name": {
        "type": "text",
        "term_vector": "yes",
        "analyzer": "ngram_tokenizer_analyzer"
      },
      "details.description": {
        "type": "text",
        "term_vector": "yes",
        "analyzer": "ngram_tokenizer_analyzer"
      }
    }
  }
}
